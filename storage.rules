rules_version = '2';

// Firebase Storage Security Rules for Therapii
service firebase.storage {
  match /b/{bucket}/o {
    
    // User avatar uploads - users can only upload their own profile photo
    match /user_avatars/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Voice check-in recordings - only accessible to authenticated users
    match /voice_checkins/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
